<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
			<% if flash[:alert] %>
        <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
					<%= flash[:alert] %>
				</div>
			<% end %> 
      <div class="card mt-4">
        <div class="card-body"> 
          <h1 class="card-title text-center mb-5">Agregar nueva película</h1>
          <%= form_with model: @movie, method: :post, url: movies_path, local: true do |form| %>
            <div class="form-group">
              <%= form.label :name, "Nombre de la película" %>
              <%= form.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :synopsis, "Sinopsis" %>
              <%= form.text_area :synopsis, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :director, "Director" %>
              <%= form.text_field :director, class: "form-control" %>
            </div>
            <div class="text-center">
              <%= form.submit "Guardar", class: "btn btn-primary mt-3" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
